<!DOCTYPE import-control PUBLIC
        "-//Checkstyle//DTD ImportControl Configuration 1.4//EN"
        "https://checkstyle.org/dtds/import_control_1_4.dtd">
<import-control pkg="io.qameta.allure" strategyOnMismatch="allowed">
    <disallow pkg="sun"/>
    <disallow pkg="org.codehaus.jackson"/>
    <disallow pkg="org.apache.commons.collections"/>
    <disallow pkg="org.springframework.util"/>
    <disallow pkg="org.springframework.data.util"/>

    <subpackage name="report">
        <allow class="org.springframework.util.MultiValueMap"/>
        <allow pkg="org.springframework.util.backoff"/>
    </subpackage>
</import-control>
