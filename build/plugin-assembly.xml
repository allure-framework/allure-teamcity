<?xml version="1.0"?>
<assembly>
    <id>plugin-assembly</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>zip</format>
    </formats>
    <files>
        <file>
            <source>target/teamcity-plugin.xml</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>target/allure-teamcity-plugin-agent.zip</source>
            <outputDirectory>agent</outputDirectory>
        </file>
    </files>
    <moduleSets>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>io.qameta.allure:allure-teamcity-plugin-common</include>
                <include>io.qameta.allure:allure-teamcity-plugin-server</include>
            </includes>
            <binaries>
                <outputDirectory>server</outputDirectory>
                <unpack>false</unpack>
                <dependencySets>
                    <dependencySet>
                        <includes>
                            <include>*</include>
                        </includes>
                    </dependencySet>
                </dependencySets>
            </binaries>
        </moduleSet>
    </moduleSets>
</assembly>
